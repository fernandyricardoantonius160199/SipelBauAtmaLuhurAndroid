<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="239dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_bau" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Selamat Datang"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:fontFamily="@font/didact_gothic" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/didact_gothic"
            android:textSize="15dp"
            android:text="Aplikasi ini dipergunakan untuk melakukan\n pelaporan kerusakan sarana dan prasarana mahasiswa yang ada di kampus \nInstitut Sains Dan Bisnis Atma Luhur."
            android:gravity="center"/>

            <TextView
                android:id="@+id/btn_selanjutnya2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="300dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:fontFamily="@font/didact_gothic"
                android:gravity="right"
                android:textSize="15dp"
                android:text="Selanjutnya"
                android:textColor="#0092BE" />

    </LinearLayout>

</ScrollView>