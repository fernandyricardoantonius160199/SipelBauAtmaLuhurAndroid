<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_background"
    tools:context=".LoginActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="226dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_bau" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:text="Masuk"
            android:textSize="20sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#0092BE"
            android:textStyle="bold" />

        <View
            android:layout_width="70dp"
            android:layout_height="4dp"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:background="#0092BE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"

                android:background="@drawable/bg_form"
                android:fontFamily="@font/didact_gothic"
                android:hint="Username"
                android:inputType="text"
                android:textColor="#0092BE"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="366dp"
                android:layout_height="49dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_form"
                android:fontFamily="@font/didact_gothic"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#0092BE"
                android:textSize="15sp" />

            <cyd.awesome.material.AwesomeText
                android:id="@+id/ImgShowPassword"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_password"
                android:layout_alignRight="@id/ed_password"
                android:fontFamily="@font/didact_gothic"
                android:layout_marginTop="-39dp"
                android:textColor="#0092BE"
                android:textSize="28dp"
                app:awesome_font="material_design"
                app:awesome_icon="MD_VISIBILITY_OFF" />

        </RelativeLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:background="#0092BE">

            <TextView
                android:id="@+id/txt_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Masuk"
                android:textColor="#FFF"
                android:fontFamily="@font/didact_gothic"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textStyle="bold" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <TextView
        android:id="@+id/txt_daftar_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/didact_gothic"
        android:text="Belum punya akun ? Daftar"
        android:textColor="#0092BE" />

    </LinearLayout>


</ScrollView>