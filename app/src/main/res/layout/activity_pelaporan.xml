<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_background"
    tools:context=".PelaporanActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:text="Pelaporan"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#0092BE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="70dp"
            android:layout_height="4dp"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:background="#0092BE" />

        <EditText
            android:id="@+id/ed_isi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_form"
            android:fontFamily="@font/didact_gothic"
            android:hint="Masukkan Detail Pelaporan"
            android:inputType="text"
            android:textColor="#0092BE"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spin_jenis"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_form"
            android:entries="@array/data_jenis"
            android:inputType="text"
            android:fontFamily="@font/didact_gothic"
            android:textColor="#0092BE"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spin_tempat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:background="@drawable/bg_form"
            android:entries="@array/data_ruangan"
            android:fontFamily="@font/didact_gothic"
            android:textColor="#0092BE"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_pilih_foto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Pilih Foto" />

        <ImageView
            android:id="@+id/img_tampil_foto"
            android:layout_width="wrap_content"
            android:layout_height="171dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/galeri" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:background="#0092BE">

            <TextView
                android:id="@+id/txt_lapor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Lapor"
                android:textColor="#FFF"
                android:fontFamily="@font/didact_gothic"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textStyle="bold" />
        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

</ScrollView>